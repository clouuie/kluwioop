@page "/"

<div class="login-page">
    <div class="login-card shadow">
        
        <h2 class="text-center mb-3">Welcome Back!</h2>
        <p class="text-center text-muted mb-4">Please sign in to continue</p>

        <form>
            <div class="mb-3 text-start">
                <label class="form-label">Username</label>
                <input class="form-control" @bind="loginModel.Username" placeholder="Enter username" />
            </div>

            <div class="text-start mb-3">
                <label class="form-label">Password</label>
                <input class="form-control" type="password" @bind="loginModel.Password" placeholder="Enter password" />
            </div>

            <div class="d-flex justify-content-between align-items-center remember-forgot">
                <div class="form-check text-start">
                    <input class="form-check-input" type="checkbox" @bind="loginModel.RememberMe" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember Me</label>
                </div>
                <a class="small text-primary" href="#">Forgot Password?</a>
            </div>

            <button class="btn btn-primary login-btn" type="submit">Login</button>

            <div class="mt-4 text-center extra-space">
                <span class="text-muted">Don’t have an account?</span>
                <a class="text-primary ms-1 register-link" href="/register"><b>Register</b></a>
            </div>
        </form>
    </div>
</div>

<style>
    .login-page {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #1a0728;
        font-family: 'Poppins', sans-serif;
    }

    .login-card {
        background-color: #2a0a45;
        border-radius: 10px;
        padding: 30px;
        width: 340px;
        box-shadow: 0 0 10px rgba(150, 80, 255, 0.2);
        text-align: center;
    }

    h2 {
        color: #f0e5ff;
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    p {
        color: #c5b3e6;
        font-size: 0.9rem;
        margin: 8px 0 15px 0;
    }

    .form-label {
        color: #e2d0ff;
        font-size: 0.9rem;
        margin-bottom: 5px;
        display: block;
        text-align: left;
    }

    .form-control {
        width: 95%;
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #8057c8;
        background-color: #3b1563;
        color: #fff;
        font-size: 0.9rem;
        margin-top: 4px;
        margin-bottom: 14px; /* ensures even spacing between Username and Password */
    }

    .form-control::placeholder {
        color: #c3a8f0;
    }

    .form-control:focus {
        outline: none;
        border-color: #a56dff;
        box-shadow: 0 0 3px #a56dff;
    }

    .remember-forgot {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 6px;
        margin-bottom: 18px;
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .form-check-label {
        color: #d4c2f3;
        font-size: 0.85rem;
    }

    .btn-primary {
        background-color: #8b4dff;
        border: none;
        border-radius: 6px;
        padding: 10px;
        color: #fff;
        font-weight: 500;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 40px;
        font-size: 1rem;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #a068ff;
    }

    a {
        color: #b48fff;
        text-decoration: none;
        font-size: 0.85rem;
    }

    a:hover {
        text-decoration: underline;
    }

    .register-link {
        font-weight: bold;
    }

    .text-muted {
        color: #bfa4e9 !important;
    }

    .extra-space {
        margin-top: 25px;
    }

    @@media (max-width: 500px) {
        .login-card {
            width: 90%;
            padding: 20px;
        }
    }
</style>

@code {
    private LoginModel loginModel = new();

    private class LoginModel
    {
        public string? Username { get; set; }
        public string? Password { get; set; }
        public bool RememberMe { get; set; }
    }
}
